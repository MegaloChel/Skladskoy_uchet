<Window x:Class="WpfApp22.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="СКЛАДСКОЙ УЧЁТ - Полный доступ" 
        Height="700" Width="1200" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <StackPanel>
                <TextBlock Text="📦 СКЛАДСКОЙ УЧЁТ"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="💾 СОХРАНИТЬ ИЗМЕНЕНИЯ"
                            Click="SaveChanges_Click"
                            Background="#27ae60" Foreground="White"
                            FontWeight="Bold" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="🔄 Обновить"
                            Click="Refresh_Click"
                            Padding="10,5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" Margin="5" x:Name="MainTabs">

            <TabItem Header="🗃️ Товары">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,5">
                        <TextBlock Text="Поиск товара:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Grid Width="300">
                            <TextBox x:Name="SearchBox" Padding="5" TextChanged="SearchBox_TextChanged" Background="White"/>
                            <TextBlock Text="Введите название или артикул..."
                                       Foreground="Gray"
                                       Margin="7,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                    <DataGrid Grid.Row="1"
                              x:Name="GridТовары"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Название}" Width="*"/>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Артикул}" Width="150"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Категория}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="🏢 Склады">
                <DataGrid x:Name="GridСклады"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Название}" Width="*"/>
                        <DataGridTextColumn Header="Адрес" Binding="{Binding Адрес}" Width="300"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="🚚 Поставщики">
                <DataGrid x:Name="GridПоставщики"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Название}" Width="*"/>
                        <DataGridTextColumn Header="Контакты" Binding="{Binding Контакты}" Width="300"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="📊 Остатки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#ecf0f1" Padding="8" Margin="0,0,0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="ℹ" Foreground="#3498db" FontSize="16" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Остатки рассчитываются автоматически из Прихода и Расхода" 
                                           VerticalAlignment="Center" 
                                           Foreground="#7f8c8d"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Click="ПолныйПересчётОстатков_Click"
                                        ToolTip="Полная очистка и пересчёт остатков"
                                        Padding="10,5"
                                        Background="#3498db"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="↻" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="Пересчитать" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <DataGrid Grid.Row="1"
                              x:Name="GridОстатки"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Товар" Binding="{Binding Товар.Название}" Width="250"/>
                            <DataGridTextColumn Header="Склад" Binding="{Binding Склад.Название}" Width="200"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Количество}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Количество}" Value="0">
                                                <Setter Property="Background" Value="#FFE0E0"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="📥 Приход">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#ecf0f1" Padding="8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Период с:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <DatePicker x:Name="ПриходДатаС" Width="120" SelectedDateChanged="ФильтрПриход_Changed"/>
                            <TextBlock Text="по:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <DatePicker x:Name="ПриходДатаПо" Width="120" SelectedDateChanged="ФильтрПриход_Changed"/>
                            <Button Content="✕ Сбросить" Margin="10,0,0,0" Click="СброситьФильтрПриход_Click" Padding="8,3"/>
                        </StackPanel>
                    </Border>
                    
                    <DataGrid Grid.Row="1"
                              x:Name="GridПриход"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                            <DataGridComboBoxColumn Header="Товар" 
                                                    SelectedValueBinding="{Binding ТоварId}"
                                                    SelectedValuePath="Id"
                                                    DisplayMemberPath="Название"
                                                    Width="250"/>
                            <DataGridComboBoxColumn Header="Склад" 
                                                    SelectedValueBinding="{Binding СкладId}"
                                                    SelectedValuePath="Id"
                                                    DisplayMemberPath="Название"
                                                    Width="150"/>
                            <DataGridComboBoxColumn Header="Поставщик" 
                                                    SelectedValueBinding="{Binding ПоставщикId}"
                                                    SelectedValuePath="Id"
                                                    DisplayMemberPath="Название"
                                                    Width="200"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Количество}" Width="100"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Цена, StringFormat='{}{0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Дата, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="📤 Расход">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#ecf0f1" Padding="8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Период с:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <DatePicker x:Name="РасходДатаС" Width="120" SelectedDateChanged="ФильтрРасход_Changed"/>
                            <TextBlock Text="по:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <DatePicker x:Name="РасходДатаПо" Width="120" SelectedDateChanged="ФильтрРасход_Changed"/>
                            <Button Content="✕ Сбросить" Margin="10,0,0,0" Click="СброситьФильтрРасход_Click" Padding="8,3"/>
                        </StackPanel>
                    </Border>
                    
                    <DataGrid Grid.Row="1"
                              x:Name="GridРасход"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                            <DataGridComboBoxColumn Header="Товар" 
                                                    SelectedValueBinding="{Binding ТоварId}"
                                                    SelectedValuePath="Id"
                                                    DisplayMemberPath="Название"
                                                    Width="250"/>
                            <DataGridComboBoxColumn Header="Склад" 
                                                    SelectedValueBinding="{Binding СкладId}"
                                                    SelectedValuePath="Id"
                                                    DisplayMemberPath="Название"
                                                    Width="150"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Количество}" Width="100"/>
                            <DataGridTextColumn Header="Причина" Binding="{Binding Причина}" Width="*"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Дата, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>